  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**"],
      "args": [
        "--timeout",
        "5000",
        "--colors",
        "--exit",
        "NODE_ENV -e test",
        "${file}"
      ],
      "console": "integratedTerminal",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "env": {
        "NODE_ENV": "Test"
      }
    }
  ]
}
